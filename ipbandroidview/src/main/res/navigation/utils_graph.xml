<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/utils_graph">

    <fragment
        android:id="@+id/fragment_chat_lib"
        android:name="com.progressterra.ipbandroidview.ui.chat.ChatFragment"
        android:label="ChatFragmentLib"
        tools:layout="@layout/fragment_chat_lib">

        <argument
            android:name="idEnterprise"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="imageUrl"
            android:defaultValue=""
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="descriptionDialog"
            android:defaultValue=""
            app:argType="string"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.progressterra.ipbandroidview.ui.set_personal_info.UserInfoFragment"
        android:label="UserInfoFragment">
        <argument
            android:name="header_res"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/fragmentRemoveAccount"
        android:name="com.progressterra.ipbandroidview.ui.remove_account.RemoveAccountFragment"
        android:label="RemoveAccountFragment"
        tools:layout="@layout/fragment_remove_account_lib">

        <argument
            android:name="confirmCodeSettings"
            app:argType="com.progressterra.ipbandroidview.ui.login.settings.ConfirmCodeSettings"
            app:nullable="false" />
    </fragment>

    <dialog
        android:id="@+id/dialogWebViewLib"
        android:name="com.progressterra.ipbandroidview.ui.dialog_web_view.WebViewDialog"
        android:label="WebViewDialog">
        <argument
            android:name="url"
            app:argType="string"
            app:nullable="false" />
    </dialog>

    <dialog
        android:id="@+id/infoDialogLib"
        android:name="com.progressterra.ipbandroidview.ui.dialog_info.InfoDialogLib"
        android:label="InfoDialogLib">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="description"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="button"
            app:argType="string"
            app:nullable="false" />
        <argument
            android:name="imageRes"
            app:argType="integer" />
    </dialog>

</navigation>