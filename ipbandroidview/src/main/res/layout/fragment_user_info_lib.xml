<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.progressterra.ipbandroidview.ui.set_personal_info.UserInfoViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/accent"
            android:elevation="3dp"
            android:visibility="@{vm.screenState.loading}" />

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{_->vm.getMainUserInfo()}"
            android:visibility="@{vm.screenState.error}"
            app:text="@string/refresh" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{vm.screenState.success}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/Text.CalloutClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginEnd="32dp"
                        android:lineSpacingExtra="6sp"
                        android:text="@{vm.onlyBaseUserInfo.data.fullName}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_status"
                        style="@style/Text.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:lineSpacingExtra="4sp"
                        android:text="@{vm.ambassadorStateInfo.ambassadorInfo.statusText}"
                        android:textColor="@color/accent"
                        app:layout_constraintTop_toBottomOf="@id/iv_photo" />

                    <TextView
                        android:id="@+id/tv_gph_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:lineSpacingExtra="4sp"
                        android:text="@{vm.ambassadorStateInfo.ambassadorInfo.message}"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_status" />


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_gph_info">

                        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                            android:id="@+id/become_self_yempoyed"
                            android:layout_width="180dp"
                            android:layout_height="36dp"
                            android:onClick="@{_->vm.becomeSelfEmployed()}"
                            android:paddingStart="13dp"
                            android:paddingEnd="13dp"
                            android:textSize="15sp"
                            android:visibility="@{vm.ambassadorStateInfo.ambassadorInfo.statusWork==2}"
                            app:isLoading="@{vm.becomeSelfEmployedBtnState.isLoading()}"
                            app:text="@string/become_self_employed"
                            app:textColor="@color/white" />

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/et_name"
                    setValidationStatus="@{vm.allInfoUserModel.nameIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/last_name"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_last_name"
                    setValidationStatus="@{vm.allInfoUserModel.lastNameIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.lastName}" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/middle_name"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.middleName}" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="50dp">


                    <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                        android:id="@+id/btn_update_personal_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="@{vm.updateMainPersonalDataIsEnabled}"
                        android:onClick="@{_->vm.updateMainUserData()}"
                        app:isLoading="@{vm.onlyBaseUserInfo.loading}"
                        app:text="@string/refresh_personal_data"
                        app:textColor="@color/white" />
                </FrameLayout>


                <include
                    android:id="@+id/upload_photo_layout"
                    layout="@layout/layout_upload_photo_lib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="24dp"
                    app:passportImageIsLoading="@{vm.passportImageUploadState.loading}"
                    app:snilsImageIsLoading="@{vm.snilsImageUploadState.loading}" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                        android:id="@+id/tv_gph_contract_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_gph_contract_share"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:text="@string/gph_share"
                        app:textColor="@color/white" />

                    <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                        android:id="@+id/tv_gph_contract_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        app:text="@string/gph_download"
                        app:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_gph_contract_download"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/group_upload_contract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:maxHeight="245dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_goneMarginEnd="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:visibility="@{vm.contractImageUploadState.loading}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_upload_contract_info"
                            style="@style/Text.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:text="@string/make_contract_photo"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_goneMarginStart="20dp" />

                        <ImageView
                            android:id="@+id/act_preview"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/confirmed_applications_background"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_select_contract_from_device"
                            android:layout_width="36dp"
                            android:layout_height="31dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_select_from_device"
                            app:layout_constraintEnd_toStartOf="@id/iv_select_contract_from_camera"
                            app:layout_constraintTop_toTopOf="@id/iv_select_contract_from_camera" />


                        <ImageView
                            android:id="@+id/iv_select_contract_from_camera"
                            android:layout_width="36dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="31dp"
                            android:layout_marginBottom="31dp"
                            android:src="@drawable/ic_select_from_camera"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_upload_contract_info" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/user_inn"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_client_inn"
                    setValidationStatus="@{vm.allInfoUserModel.clientInnIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.clientInn}" />

                <TextView
                    style="@style/Text.CalloutClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/acc_requisites" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/bank_name"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_bank_name"
                    setValidationStatus="@{vm.allInfoUserModel.bankNameIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.bankName}" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/account_number"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_account"
                    setValidationStatus="@{vm.allInfoUserModel.accountIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.account}" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/bic"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_bic"
                    setValidationStatus="@{vm.allInfoUserModel.bicIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.bic}" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/corr_acc"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_corr_account"
                    setValidationStatus="@{vm.allInfoUserModel.correspondentAccountIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.correspondentAccount}" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/inn_of_bank"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_inn"
                    setValidationStatus="@{vm.allInfoUserModel.innIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.inn}" />

                <TextView
                    style="@style/Text.Footnote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/CPP_of_bank"
                    android:textColor="@color/accent" />

                <EditText
                    android:id="@+id/et_cpp"
                    setValidationStatus="@{vm.allInfoUserModel.cppIsValid}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="40dp"
                    android:singleLine="true"
                    android:text="@{vm.allInfoUserModel.cpp}" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="50dp">

                    <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                        android:id="@+id/btn_send_user_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="@{vm.updateBankPersonalDataIsEnabled}"
                        android:onClick="@{_->vm.sendBaseUserInfo()}"
                        app:isLoading="@{vm.onlyBankUserInfo.loading}"
                        app:text="@string/send_data"
                        app:textColor="@color/white" />

                </FrameLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </FrameLayout>


</layout>