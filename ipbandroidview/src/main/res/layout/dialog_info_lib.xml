<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_dialog_background">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/Text.Subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/ivImage"
                tools:text="Отлично!" />

            <TextView
                android:id="@+id/tvDescription"
                style="@style/Text.Body.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="Изменения успешно сохранены" />

            <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintWidth_min="150dp"
                app:paddingText="@dimen/margin_small"
                app:text="Ок" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>