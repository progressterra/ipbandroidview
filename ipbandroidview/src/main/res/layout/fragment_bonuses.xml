<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="BonusesInfo"
            type="com.progressterra.ipbandroidapi.interfaces.client.bonuses.BonusesInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_iv"
            android:layout_width="0dp"
            android:layout_height="148dp"
            android:layout_marginTop="53dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:minHeight="105dp">

                <TextView
                    android:id="@+id/number_of_bonuses_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:text="@{@string/bonuses_count(BonusesInfo.currentQuantity)}"
                    android:textSize="@dimen/header_text_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bonus_expiration_date_tv"
                    app:visibility="@{BonusesInfo.showAllBonusesInfo}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="19dp"
                    android:text="@{@string/expired(BonusesInfo.dateBurning)}"
                    android:textSize="@dimen/base_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/number_of_bonuses_tv" />

                <ImageView
                    android:id="@+id/fire_iv"
                    app:visibility="@{BonusesInfo.showAllBonusesInfo}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_fire"
                    app:layout_constraintBottom_toBottomOf="@id/bonus_expiration_date_tv"
                    app:layout_constraintEnd_toStartOf="@id/bonus_expiration_number_tv"
                    app:layout_constraintStart_toEndOf="@+id/bonus_expiration_date_tv"
                    app:layout_constraintTop_toTopOf="@id/bonus_expiration_date_tv" />

                <ImageView
                    android:id="@+id/next_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_btn_next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bonus_expiration_number_tv"
                    app:visibility="@{BonusesInfo.showAllBonusesInfo}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:text= "@{@string/bonuses_count(BonusesInfo.forBurningQuantity)}"
                    android:textSize="@dimen/base_text_size"
                    app:layout_constraintBottom_toBottomOf="@id/bonus_expiration_date_tv"
                    app:layout_constraintEnd_toStartOf="@id/next_btn"
                    app:layout_constraintTop_toTopOf="@id/bonus_expiration_date_tv" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>