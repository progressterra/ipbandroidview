<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/my_bonuses_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мои бонусы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="300 бонусов"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        android:id="@+id/number_of_bonuses_tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_bonuses_tv" />

    <TextView
        android:id="@+id/bonus_expiration_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="19dp"
        android:text="29.03 сгорит"
        android:textSize="@dimen/base_text_size"
        app:layout_constraintEnd_toStartOf="@id/fire_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_of_bonuses_tv_detail" />

    <ImageView
        android:id="@+id/fire_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_fire"
        app:layout_constraintBottom_toBottomOf="@id/bonus_expiration_date_tv"
        app:layout_constraintEnd_toStartOf="@id/bonus_expiration_number_tv"
        app:layout_constraintStart_toEndOf="@id/bonus_expiration_date_tv"
        app:layout_constraintTop_toTopOf="@id/bonus_expiration_date_tv" />

    <View
        android:id="@+id/horizontal_line"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/fire_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/bonus_expiration_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250 бонусов"
        app:layout_constraintBottom_toBottomOf="@id/bonus_expiration_date_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fire_iv"
        app:layout_constraintTop_toTopOf="@id/bonus_expiration_date_tv" />

    <com.google.android.material.tabs.TabLayout
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>