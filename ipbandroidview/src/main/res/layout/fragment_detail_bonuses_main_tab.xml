<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/greet_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Здравствуйте"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="300"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/greet_tv"
        app:layout_constraintStart_toStartOf="@id/greet_tv"
        app:layout_constraintTop_toBottomOf="@id/greet_tv" />

    <View
        android:id="@+id/verticalLine"
        android:layout_width="1dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="#DEDEDE"
        app:layout_constraintStart_toEndOf="@id/greet_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/next_expired_date_tv_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="Дата следущего сгорания"
        app:layout_constraintStart_toEndOf="@id/verticalLine"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/next_expired_date_tab"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="29.03.21"
        app:layout_constraintStart_toEndOf="@id/verticalLine"
        app:layout_constraintTop_toBottomOf="@id/next_expired_date_tv_tab" />

    <TextView
        android:id="@+id/expired_number_tab_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Сумма сгорания"
        app:layout_constraintStart_toEndOf="@id/verticalLine"
        app:layout_constraintTop_toBottomOf="@id/next_expired_date_tab" />

    <TextView
        android:id="@+id/expired_number_tab"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="300"
        app:layout_constraintStart_toEndOf="@id/verticalLine"
        app:layout_constraintTop_toBottomOf="@id/expired_number_tab_tv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@id/verticalLine" />

</androidx.constraintlayout.widget.ConstraintLayout>