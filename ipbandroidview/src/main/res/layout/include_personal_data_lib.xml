<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_label"
            style="@style/Typography.RegularText"
            android:textSize="12sp"
            android:textColor="#9D9995"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/personal_name"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_name"
            style="@style/Typography.RegularText"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:background="@drawable/background_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_name_label" />

        <TextView
            android:id="@+id/tv_surname_label"
            style="@style/Typography.RegularText"
            android:textSize="12sp"
            android:textColor="#9D9995"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/personal_second_name"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/et_name" />

        <EditText
            android:id="@+id/et_surname"
            style="@style/Typography.RegularText"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:background="@drawable/background_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_surname_label" />

        <TextView
            android:id="@+id/tv_birthDay_label"
            style="@style/Typography.RegularText"
            android:textSize="12sp"
            android:textColor="#9D9995"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_birthday_hint"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/et_surname" />

        <TextView
            android:id="@+id/tv_birth_day"
            style="@style/Typography.RegularText"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/v_sex"
            app:layout_constraintEnd_toEndOf="@id/v_sex"
            app:layout_constraintTop_toBottomOf="@id/tv_birthDay_label"/>

        <View
            android:id="@+id/v_birth_day"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#DEDEDE"
            android:layout_marginHorizontal="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_birth_day"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/city_spinner"
            style="@style/Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/v_birth_day" />

        <TextView
            android:id="@+id/tv_email_label"
            style="@style/Typography.RegularText"
            android:textSize="12sp"
            android:textColor="#9D9995"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/personal_email_hint"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/city_spinner" />

        <EditText
            android:id="@+id/et_email"
            style="@style/Typography.RegularText"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:background="@drawable/background_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_email_label" />

        <TextView
            android:id="@+id/tv_sex_short"
            style="@style/Typography.RegularText"
            android:textSize="12sp"
            android:textColor="#9D9995"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_sex"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/et_email" />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/Typography.RegularText"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="@id/v_sex"
            app:layout_constraintEnd_toEndOf="@id/v_sex"
            app:layout_constraintBottom_toBottomOf="@id/v_sex"/>

        <View
            android:id="@+id/v_sex"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#DEDEDE"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_sex_short"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:layout_constraintBottom_toTopOf="@id/button_skip"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/v_sex"
            app:layout_goneMarginBottom="24dp"
            app:text="@string/next" />

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:id="@+id/button_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/button_next"
            app:text="@string/personal_skip" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="34dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="31dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>