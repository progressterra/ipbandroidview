<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            android:hint="@string/name"
            app:hintTextAppearance="@style/Typography.RegularText"
            app:hintTextColor="#979797"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:backgroundTint="#DEDEDE"
                android:textAppearance="@style/Typography.RegularText"
                android:inputType="date"
                android:textSize="16sp"
                android:textColor="#1B1B1B"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_surname"
            android:layout_marginTop="35dp"
            android:hint="@string/name"
            app:hintTextAppearance="@style/Typography.RegularText"
            app:hintTextColor="#979797"
            app:layout_constraintTop_toBottomOf="@id/til_name"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_surname"
                android:backgroundTint="#DEDEDE"
                android:textAppearance="@style/Typography.RegularText"
                android:inputType="date"
                android:textSize="16sp"
                android:textColor="#1B1B1B"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_birth_day"
            android:layout_marginTop="35dp"
            android:hint="@string/name"
            app:hintTextAppearance="@style/Typography.RegularText"
            app:hintTextColor="#979797"
            app:layout_constraintTop_toBottomOf="@id/til_surname"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:enabled="false"
                android:id="@+id/et_birth_day"
                android:backgroundTint="#DEDEDE"
                android:textAppearance="@style/Typography.RegularText"
                android:inputType="date"
                android:textSize="16sp"
                android:textColor="#1B1B1B"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/city_spinner"
            style="@style/Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/til_birth_day" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            android:layout_marginTop="35dp"
            android:hint="@string/name"
            app:hintTextAppearance="@style/Typography.RegularText"
            app:hintTextColor="#979797"
            app:layout_constraintTop_toBottomOf="@id/city_spinner"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:backgroundTint="#DEDEDE"
                android:textAppearance="@style/Typography.RegularText"
                android:inputType="date"
                android:textSize="16sp"
                android:textColor="#1B1B1B"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_sex_short"
            style="@style/Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_sex"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/til_email" />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/Typography.RegularText"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="@id/v_sex"
            app:layout_constraintEnd_toEndOf="@id/v_sex"
            app:layout_constraintBottom_toBottomOf="@id/v_sex"/>

        <View
            android:id="@+id/v_sex"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#DEDEDE"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_sex_short"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:layout_constraintBottom_toTopOf="@id/button_skip"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/v_sex"
            app:layout_goneMarginBottom="24dp"
            app:text="@string/next" />

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:id="@+id/button_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/button_next"
            app:text="@string/personal_skip" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="34dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="31dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>