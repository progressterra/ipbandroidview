<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.progressterra.ipbandroidview.data.model.BonusMessage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/greet_tv"
            style="@style/Footnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:text="@{item.typeBonusName}"
            android:textColor="@color/text_in_forms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toEndOf="@id/greet_tv"
            app:layout_constraintStart_toStartOf="@id/greet_tv"
            app:layout_constraintTop_toBottomOf="@id/greet_tv"
            app:textFromInt="@{item.currentQuantity}" />

        <View
            android:id="@+id/verticalLine"
            android:layout_width="1dp"
            android:layout_height="88dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:background="#DEDEDE"
            app:layout_constraintStart_toEndOf="@id/greet_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/next_expired_date_tv_tab"
            style="@style/Footnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:text="@string/next_burning_date"
            android:textColor="@color/text_in_forms"
            app:layout_constraintStart_toEndOf="@id/verticalLine"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/next_expired_date_tab"
            style="@style/Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="@{item.dateBurning}"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/verticalLine"
            app:layout_constraintTop_toBottomOf="@id/next_expired_date_tv_tab" />

        <TextView
            android:id="@+id/expired_number_tab_tv"
            style="@style/Footnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="@string/next_burning_date"
            android:textColor="@color/text_in_forms"
            app:layout_constraintStart_toEndOf="@id/verticalLine"
            app:layout_constraintTop_toBottomOf="@id/next_expired_date_tab" />

        <TextView
            android:id="@+id/expired_number_tab"
            style="@style/Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/verticalLine"
            app:layout_constraintTop_toBottomOf="@id/expired_number_tab_tv"
            app:textFromInt="@{item.forBurningQuantity}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="#DEDEDE"
            app:layout_constraintTop_toBottomOf="@id/verticalLine" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>