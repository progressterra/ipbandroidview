<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.progressterra.ipbandroidview.ui.bonuses_details.tabs.ColorsPalette" />


        <variable
           name="ColorsPaletteObject"
           type="com.progressterra.ipbandroidview.ui.bonuses_details.tabs.ColorsPalette" />
        <variable
            name="ScreenState"
            type="com.progressterra.ipbandroidview.utils.ScreenState" />
        <variable
            name="vm"
            type="com.progressterra.ipbandroidview.ui.login.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.progressterra.ipbandroidview.ui.login.login.LoginFragment">

        <include
            android:id="@+id/header"
            layout="@layout/include_login_header" />

        <TextView
            app:setMainTextColor="@{ColorsPaletteObject}"
            android:id="@+id/textView_hint"
            style="@style/Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="51dp"
            android:gravity="center_horizontal"
            android:text="@string/login_description"
            android:textColor="@color/text_color" />

        <TextView
            app:setSecondaryTextColor="@{ColorsPaletteObject}"
            android:id="@+id/textView_countyLabel"
            style="@style/Footnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="40dp"
            android:text="@string/login_country" />

        <FrameLayout
            android:id="@+id/login_country_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="41dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/border_bottom_grey_ripple"
            android:onClick="@{() -> vm.selectCountry()}">

            <TextView
                android:id="@+id/login_country"
                style="@style/Body1"
                app:setMainTextColor="@{ColorsPaletteObject}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:text="@{vm.countryText}"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                tools:text="Россия (+7)" />
        </FrameLayout>

        <TextView
            app:setSecondaryTextColor="@{ColorsPaletteObject}"
            android:id="@+id/textView_phoneLabel"
            style="@style/Footnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:text="@string/login_phone"
            android:textColor="@color/form_text_color" />

        <EditText
            android:id="@+id/login_phone"
            style="@style/Body1"
            app:setMainTextColor="@{ColorsPaletteObject}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/background_edittext"
            android:inputType="number"
            android:text="@{vm.phoneText}"
            android:textColor="@color/grey_dark"
            tools:text="241" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textView_agreement"
            style="@style/Footnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            android:text="@string/login_agreement_html"
            android:textAlignment="textStart"
            android:textColor="@color/grey_dark" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                app:setMainColor="@{ColorsPaletteObject}"
                android:background="@drawable/button"
                android:id="@+id/login_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="38dp"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <ProgressBar
                app:setVisibilityLoaderByScreenState="@{vm.screenState}"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>


        <View
            app:setSecondaryColor="@{ColorsPaletteObject}"
            android:background="#9E9E9E"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <ImageView
            app:setDrawableFromPalette="@{ColorsPalette.INSTANCE.loginImageRes}"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</layout>