<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_enabled="true">

        <shape>
            <corners android:radius="?app_buttonCornerRadius" />
            <gradient android:endColor="?app_buttonGradientEndColor" android:startColor="?app_buttonGradientStartColor" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle" tools:ignore="ExtraText">
            <corners android:radius="?attr/app_buttonCornerRadius" />
            <solid android:color="?app_buttonDisabledColor" />
        </shape>
    </item>

</selector>