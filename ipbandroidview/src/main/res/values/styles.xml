<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Body1">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Footnote">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="Callout1">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <!-- Текст -->
    <style name="Text">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextNormalMedium" parent="Text">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextNormalLarge" parent="Text">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextGreyMedium" parent="TextNormalMedium">
        <item name="android:textColor">@color/warm_grey</item>
    </style>

</resources>