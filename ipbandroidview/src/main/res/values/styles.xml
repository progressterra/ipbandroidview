<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IPBAndroidView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="app_defaultCornerRadius">8dp</item>

        <!--  Button defaults      -->
        <item name="app_buttonCornerRadius">?attr/app_defaultCornerRadius</item>
        <item name="app_buttonColor">@color/color_button</item>
        <item name="app_buttonGradientStartColor">?attr/app_buttonColor</item>
        <item name="app_buttonGradientEndColor">?attr/app_buttonColor</item>
        <item name="app_buttonDisabledColor">@color/color_buttonDisabled</item>

        <!--  Background defaults      -->
        <item name="app_backgroundColor">@color/color_background</item>

    </style>


    <style name="Body1">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Footnote">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="Callout1">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <!-- Текст -->
    <style name="Text">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextNormalMedium" parent="Text">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextNormalLarge" parent="Text">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextGreyMedium" parent="TextNormalMedium">
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>

        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="Callout2">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Body2">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>


</resources>