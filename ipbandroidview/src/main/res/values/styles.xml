<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="IPBAndroidView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="app_defaultCornerRadius">8dp</item>

        <!--  Button defaults      -->
        <item name="app_buttonCornerRadius">?attr/app_defaultCornerRadius</item>
        <item name="app_buttonColor">@color/color_button</item>
        <item name="app_buttonGradientStartColor">?attr/app_buttonColor</item>
        <item name="app_buttonGradientEndColor">?attr/app_buttonColor</item>
        <item name="app_buttonDisabledColor">@color/color_buttonDisabled</item>
        <item name="app_buttonFilledTextColor">@color/white</item>
        <item name="app_buttonOutlinedTextColor">?app_buttonColor</item>
        <item name="app_buttonOutlinedStrokeWidth">1dp</item>

        <item name="app_progressBar_color">@color/color_buttonDisabled</item>

        <!-- Forms defaults       -->
        <item name="app_formsUnderlineColor">@color/color_lines</item>
        <item name="app_formsTextColor">@color/color_textFootnote</item>
        <item name="app_formsUnderlineInvalidateColor">#FF0000</item>

        <!--  Background defaults      -->
        <item name="app_backgroundColor">@color/color_background</item>

        <!--  Text defaults  -->
        <item name="app_textTitleSize">@dimen/textSize_Title</item>
        <item name="app_textTitleLineSpacing">@dimen/textSpacing_Title</item>
        <item name="app_textCalloutButton1Size">@dimen/textSize_CalloutButton1</item>
        <item name="app_textCalloutButton1Spacing">@dimen/textSpacing_CalloutButton1</item>
        <item name="app_textCalloutButton2Size">@dimen/textSize_CalloutButton2</item>
        <item name="app_textCalloutButton2Spacing">@dimen/textSpacing_CalloutButton2</item>
        <item name="app_textCalloutClickableSize">@dimen/textSize_CalloutClickable</item>
        <item name="app_textCalloutClickableSpacing">@dimen/textSpacing_CalloutClickable</item>
        <item name="app_textBodySize">@dimen/textSize_Body</item>
        <item name="app_textBodySpacing">@dimen/textSpacing_Body</item>
        <item name="app_textFootnote1Size">@dimen/textSize_Footnote1</item>
        <item name="app_textFootnote1Spacing">@dimen/textSpacing_Footnote1</item>
        <item name="app_textFootnote2Size">@dimen/textSize_Footnote2</item>
        <item name="app_textFootnote2Spacing">@dimen/textSpacing_Footnote2</item>
        <item name="app_textFootnoteAttentionSize">?app_textFootnote1Size</item>
        <item name="app_textFootnoteAttentionSpacing">?app_textFootnote1Spacing</item>
        <item name="app_textDefaultColor">@color/color_textDefault</item>
        <item name="app_textTitleColor">?app_textDefaultColor</item>
        <item name="app_textCallout1Color">?app_textDefaultColor</item>
        <item name="app_textCallout2Color">?app_textDefaultColor</item>
        <item name="app_textCalloutClickableColor">?app_textDefaultColor</item>
        <item name="app_textBodyColor">?app_textDefaultColor</item>
        <item name="app_textFootnote1Color">@color/color_textFootnote</item>
        <item name="app_textFootnote2Color">@color/color_textFootnote</item>
        <item name="app_textFootnoteAttentionColor">@color/color_textFootnoteAttention</item>
        <item name="app_textAttentionColor">@color/color_textFootnoteAttention</item>

        <!-- Круги в подтверждении номера -->
        <item name="app_confirm_circle_default_color">@color/color_buttonDisabled</item>
        <item name="app_confirm_circle_success_color">@color/color_textFootnoteAttention</item>
        <item name="app_confirm_circle_gradient_start_color">?app_confirm_circle_success_color
        </item>
        <item name="app_confirm_circle_gradient_end_color">?app_confirm_circle_success_color</item>
        <item name="app_confirm_text_color">@color/white</item>
        <item name="app_confirm_text_size">24sp</item>
        <item name="app_confirm_circle_1_color">?app_confirm_circle_success_color</item>
        <item name="app_confirm_circle_2_color">?app_confirm_circle_success_color</item>
        <item name="app_confirm_circle_3_color">?app_confirm_circle_success_color</item>
        <item name="app_confirm_circle_4_color">?app_confirm_circle_success_color</item>


        <!--   BonusesBanner     -->
        <item name="app_bonusesBannerTextColor">@color/black</item>


        <item name="app_animation_duration">200</item>
    </style>

    <!-- Текст   -->
    <style name="Text">
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textFontWeight" tools:targetApi="P">400</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Название разделов, списков   -->
    <style name="Text.Title">
        <item name="android:textFontWeight" tools:targetApi="P">700</item>
        <item name="android:textSize">?app_textTitleSize</item>
        <item name="lineSpacing">?app_textTitleLineSpacing</item>
        <item name="android:textColor">?app_textTitleColor</item>
    </style>

    <style name="Text.Subheading">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineSpacing">28sp</item>
    </style>

    <style name="Text.Headline">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineSpacing">28sp</item>
    </style>

    <!-- Текст в кнопках   -->
    <style name="Text.CalloutButton1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">?app_textCalloutButton1Size</item>
        <item name="lineSpacing">?app_textCalloutButton1Spacing</item>
        <item name="android:textColor">?app_textCallout1Color</item>
    </style>

    <style name="Text.CalloutButton2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">?app_textCalloutButton2Size</item>
        <item name="lineSpacing">?app_textCalloutButton2Spacing</item>
        <item name="android:textColor">?app_textCallout2Color</item>
    </style>

    <!-- Кликабельный текст   -->
    <style name="Text.CalloutClick">
        <item name="android:textSize">?attr/app_textCalloutClickableSize</item>
        <item name="lineSpacing">?attr/app_textCalloutClickableSpacing</item>
        <item name="android:textColor">?app_textCalloutClickableColor</item>
    </style>

    <!-- Основной текст   -->
    <style name="Text.Body">
        <item name="android:textSize">?app_textBodySize</item>
        <item name="lineSpacing">?app_textBodySpacing</item>
        <item name="android:textColor">?app_textBodyColor</item>
    </style>

    <style name="Text.Body.Medium">
        <item name="android:textFontWeight" tools:targetApi="P">500</item>
    </style>

    <style name="Text.Body.Regular">
        <item name="android:textFontWeight" tools:targetApi="P">400</item>
    </style>

    <!-- Сноски, текст в карточках товара   -->
    <style name="Text.Footnote1">
        <item name="android:textSize">?app_textFootnote1Size</item>
        <item name="lineSpacing">?app_textFootnote1Spacing</item>
        <item name="android:textColor">?app_textFootnote1Color</item>
    </style>

    <style name="Text.Footnote2">
        <item name="android:textSize">?app_textFootnote2Size</item>
        <item name="lineSpacing">?app_textFootnote2Spacing</item>
        <item name="android:textColor">?app_textFootnote2Color</item>
    </style>

    <style name="Text.FootnoteAttention">
        <item name="android:textSize">?app_textFootnoteAttentionSize</item>
        <item name="lineSpacing">?app_textFootnoteAttentionSpacing</item>
        <item name="android:textColor">?app_textFootnoteAttentionColor</item>
    </style>

    <style name="Text.Body.Attention" parent="">
        <item name="android:textColor">?attr/app_textAttentionColor</item>

    </style>

    <style name="Text.Forms" parent="Text.CalloutButton1">
        <item name="android:textColor">?app_formsTextColor</item>
    </style>


    <!-- Кнопки  -->
    <style name="Button">
        <item name="enforceTextAppearance">true</item>
        <item name="android:textAppearance">@style/Text.CalloutButton1</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Filled">
        <item name="android:background">@drawable/button_filled</item>
        <item name="android:textColor">?app_buttonFilledTextColor</item>
    </style>

    <style name="Button.Outlined">
        <item name="android:background">@drawable/button_outlined</item>
        <item name="android:textColor">?app_buttonOutlinedTextColor</item>
    </style>

    <style name="Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="paddingStart">0dp</item>
        <item name="android:background">@drawable/background_spinner</item>
    </style>

    <!--Old-->
    <style name="Body1">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textFontWeight" tools:targetApi="P">400</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Footnote">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="Callout1">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <!-- Текст -->
    <style name="old_Text">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextNormalMedium" parent="old_Text">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextNormalLarge" parent="old_Text">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextGreyMedium" parent="TextNormalMedium">
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>

        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="Callout2">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Body2">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <!-- Поля ввода -->
    <style name="EditTextBackground" parent="Text.Body">
        <item name="backgroundTint">?app_formsUnderlineColor</item>
    </style>

</resources>