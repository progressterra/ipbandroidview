<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?app_backgroundColor">

        <include
            android:id="@+id/header"
            layout="@layout/view_header_lib" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcwBanner"
            android:name="com.progressterra.ipbandroidview.ui.bonuses_banner.BonusesBannerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/header"
            tools:layout="@layout/fragment_bonuses_banner_lib" />

        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/spacer_solid"
            app:layout_constraintTop_toBottomOf="@id/fcwBanner" />

        <TextView
            android:id="@+id/tvInvite"
            style="@style/Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="@string/bdwi_invite_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spacer" />

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:id="@+id/btnInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/tvInvite"
            app:text="@string/bdwi_invite_button" />

        <TextView
            android:id="@+id/tvBonuses"
            style="@style/Text.Subheading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/bdwi_bonuses_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnInvite" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcw_container"
            android:name="com.progressterra.ipbandroidview.ui.bonuses_movements.BonusesMovementsRecyclerFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBonuses"
            tools:layout="@layout/fragment_bonuses_movements_lib" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>