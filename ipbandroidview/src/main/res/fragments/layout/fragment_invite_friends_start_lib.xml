<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.progressterra.ipbandroidview.ui.user_inviting.UserInviteInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/view_header"
            layout="@layout/view_header_lib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:foregroundGravity="center"
            android:visibility="@{vm.infoForInvitingMembers.loading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:onClick="@{_->vm.getInfo()}"
            android:text="@string/refresh"
            android:visibility="@{vm.infoForInvitingMembers.error}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?app_backgroundColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="?app_backgroundColor"
                android:layout_marginHorizontal="40dp"
                android:orientation="vertical"
                android:visibility="@{vm.infoForInvitingMembers.success}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/tvDescTitle"
                    android:gravity="center"
                    style="@style/Typography.BoldText"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/invite_friend_and_earn_more"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvShowDescription"
                    style="@style/Text.CalloutClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/show_more"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/wvVideo"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_education" />

                <TextView
                    style="@style/Typography.RegularText"
                    android:textSize="12sp"
                    android:textColor="#979797"
                    android:text="@string/inviting_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="70dp"/>

                <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                    android:id="@+id/btnContactList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="24dp"
                    app:buttonTint="#333333"
                    app:text="@string/invite_friends_from_contacts" />

                <TextView
                    android:id="@+id/btn_copy_link"
                    style="@style/Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="42dp"
                    android:drawablePadding="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/copy_inviting_link"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/copy" />

                <TextView
                    android:id="@+id/btn_share"
                    style="@style/Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/share"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/ic_share" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>