<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.progressterra.ipbandroidview.ui.user_inviting.UserInviteInfoViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{vm.infoForInvitingMembers.loading}" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{_->vm.getInfo()}"
                android:text="@string/refresh"
                android:visibility="@{vm.infoForInvitingMembers.error}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="@{vm.infoForInvitingMembers.success}">

                <include layout="@layout/view_header_lib" />


                <TextView
                    android:id="@+id/tvDescTitle"
                    style="@style/Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="18dp"
                    android:text="@string/invite_friend_and_earn_more"
                    android:textColor="@color/theme_color"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvDescShort"
                    style="@style/Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="18dp"
                    android:autoLink="web"
                    android:text="@{vm.infoForInvitingMembers.data.textInvite}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDescTitle" />

                <TextView
                    android:id="@+id/tvShowDescription"
                    style="@style/Text.CalloutClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/show_more"
                    android:textColor="@color/theme_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDescShort" />

                <ImageView
                    android:id="@+id/wvVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_education"
                    app:layout_constraintTop_toBottomOf="@id/tvShowDescription" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnContactList"
                    style="@style/Button.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/invite_friends_from_contacts"
                    app:layout_constraintTop_toBottomOf="@id/wvVideo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginBottom="22dp"
                        android:src="@drawable/copy" />

                    <TextView
                        android:id="@+id/btn_copy_link"
                        style="@style/Text.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="@string/copy_inviting_link"
                        android:textColor="@color/theme_color" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>


</layout>