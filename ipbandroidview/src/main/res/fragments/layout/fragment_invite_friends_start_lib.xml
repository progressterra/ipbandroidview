<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.progressterra.ipbandroidview.ui.user_inviting.UserInviteInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/view_header"
            layout="@layout/view_header_lib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:foregroundGravity="center"
            android:visibility="@{vm.infoForInvitingMembers.loading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:onClick="@{_->vm.getInfo()}"
            android:text="@string/refresh"
            android:visibility="@{vm.infoForInvitingMembers.error}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?app_backgroundColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="?app_backgroundColor"
                android:orientation="vertical"
                android:visibility="@{vm.infoForInvitingMembers.success}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/tvDescTitle"
                    style="@style/Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="18dp"
                    android:text="@string/invite_friend_and_earn_more"
                    android:textColor="@color/theme_color"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvDescShort"
                    style="@style/Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="18dp"
                    android:autoLink="web"
                    android:text="@{vm.infoForInvitingMembers.data.textInvite}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDescTitle" />

                <TextView
                    android:id="@+id/tvShowDescription"
                    style="@style/Text.CalloutClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/show_more"
                    android:textColor="@color/theme_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDescShort" />

                <ImageView
                    android:id="@+id/wvVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_education"
                    app:layout_constraintTop_toBottomOf="@id/tvShowDescription" />

                <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
                    android:id="@+id/btnContactList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@id/wvVideo"
                    app:text="@string/invite_friends_from_contacts" />


                <TextView
                    android:id="@+id/btn_copy_link"
                    style="@style/Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="42dp"
                    android:drawableStart="@drawable/copy"
                    android:drawablePadding="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/copy_inviting_link"
                    android:textColor="@color/theme_color" />


                <TextView
                    android:id="@+id/btn_share"
                    style="@style/Text.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="12dp"
                    android:drawableStart="@drawable/ic_share"
                    android:drawablePadding="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/share"
                    android:textColor="@color/theme_color" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>