<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?app_backgroundColor"
        android:orientation="vertical">

        <include layout="@layout/view_header_lib" />

        <TextView
            android:id="@+id/test"
            android:gravity="center"
            style="@style/Typography.BoldText"
            android:textSize="24sp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/invite_friend_and_earn_more"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/amb_logo"/>

        <TextView
            android:id="@+id/tv_html_info"
            style="@style/Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            android:text="@string/inviting_info"/>

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:id="@+id/btnSelectContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="33dp"
            app:buttonTint="#333333"
            app:text="@string/choose_from_contacts" />

        <TextView
            android:id="@+id/tv_full_info"
            style="@style/Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:text="@string/conditions_for_attracting_clients"
            android:textColor="@color/black"/>
    </LinearLayout>
</layout>
