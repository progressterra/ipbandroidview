<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.progressterra.ipbandroidview.ui.chat.ChatViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            android:visibility="@{vm.messagesList.isLoading()}" />

        <com.progressterra.ipbandroidview.view.FilledButtonWithLoading
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{_->vm.getDialogInfo()}"
            android:visibility="@{vm.messagesList.isError()}"
            app:text="@string/refresh" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{vm.messagesList.isSuccess()}">

            <TextView
                style="@style/Text.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/messages_empty_list"
                android:textColor="@color/black"
                android:visibility="@{vm.messagesList.data.empty}"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/et_input_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_input_message"
                style="@style/Text.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:hint="@string/message_hint"
                android:text="@={vm.message}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/br_button"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:onClick="@{() -> vm.sendMessage()}"
                android:src="@drawable/ic_send_button"
                android:visibility="@{vm.messageSendingStatus.isSuccess()}"
                app:layout_constraintBottom_toBottomOf="@id/et_input_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_input_message" />

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="20dp"
                android:elevation="3dp"
                android:visibility="@{vm.messageSendingStatus.isLoading()}"
                app:layout_constraintBottom_toBottomOf="@id/et_input_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_input_message"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/br_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:barrierDirection="start"
                app:constraint_referenced_ids="pb_loading, iv_send" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/et_input_message"
                app:layout_constraintTop_toTopOf="parent"
                app:reverseLayout="true"
                app:stackFromEnd="false"
                tools:itemCount="2"
                tools:listitem="@layout/item_message_lib" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>